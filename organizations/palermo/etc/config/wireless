config wifi-iface 'wifi_ninux'
	option device 'radio0'
	option ifname 'ninux'
	option encryption 'none'
	option mode 'adhoc'
	option network 'ninux'
	option ssid 'ninux.org'

config wifi-iface 'wifi_wlan0'
	option device 'radio0'
	option encryption 'none'
	option ifname 'wlan0'
	option mode 'ap'
	option ssid 'www.ninux.org-palermo'
	option network 'lan'
